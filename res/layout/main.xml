<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/top_banner" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/forum" />

    <Button
        android:id="@+id/button_directions"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:drawableLeft="@drawable/icon_button"
        android:text="Directions" />

   	<Button 
    	android:id="@+id/button_food_drink" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content"
    	android:drawableLeft="@drawable/icon_button"
    	android:text="Food and Drink"/>
    <Button 
    	android:id="@+id/button_hotels" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content"
    	android:drawableLeft="@drawable/icon_button"
    	android:text="Hotels"/>
    <Button 
    	android:id="@+id/button_practical_info" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content"
    	android:drawableLeft="@drawable/icon_button"
    	android:text="Pratical Information"/>
   	<Button 
    	android:id="@+id/button_planner" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content"
    	android:drawableLeft="@drawable/icon_button"
    	android:text="Planner"/>

</LinearLayout>